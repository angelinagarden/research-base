// API Configuration
const isProduction = import.meta.env.PROD;
const isDevelopment = import.meta.env.DEV;

// Backend URL configuration
export const API_BASE_URL = isProduction 
  ? 'https://your-api-gateway-url.amazonaws.com/prod' // AWS API Gateway - UPDATE THIS
  : 'http://localhost:3001';

// For AWS deployment, we need to point to a backend service
// Options:
